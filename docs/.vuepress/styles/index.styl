.zhailu-outer {
    background-color: #f5f2f0;
    padding: 20px;
    box-sizing: border-box;
    margin-bottom: 10px;
}

.zhailu-author {
    text-align: end;
    color: #3eaf7c;
    font-style: oblique;
}

strong {
    font-weight: 700 !important;
}

a {
    code {
        color: #3eaf7c !important;
    }
}

.gt-container .gt-meta {
    z-index: 1 !important;
}

.gt-no-init .gt-btn-login {
    background-color: transparent !important;
    border: 1px solid #3eaf7c !important;
    color: #3eaf7c !important;
}

.back-to-ceiling {
    bottom: 2rem !important;
}

.blog-list, .abstract-wrapper {
    code {
        padding: 0.2em 0.3em;
        margin: 0;
        font-size: 0.85em;
        background-color: var(--code-color);
        border-radius: 3px;
    }

    routerlink {
